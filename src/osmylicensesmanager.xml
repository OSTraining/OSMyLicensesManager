<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>plg_system_osmylicensesmanager</name>
    <author>Alledia.com</author>
    <creationDate>October 13 2014</creationDate>
    <copyright>Copyright (C) 2014 Alledia.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>hello@alledia.com</authorEmail>
    <authorUrl>https://www.alledia.com</authorUrl>
    <version>1.0.1</version>
    <description>PLG_SYSTEM_OSMYLICENSESMANAGER_DESCRIPTION</description>

    <alledia>
        <element publish="true">osmylicensesmanager</element>
        <namespace>OSMyLicensesManager</namespace>
        <license>free</license>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework"
                >AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="oscarootcertificates"
                publish="true"
                ordering="first"
                >OSCARootCertificates</extension>
        </relatedExtensions>
    </alledia>

    <scriptfile>script.installer.php</scriptfile>

    <files>
        <folder>language</folder>
        <folder>library</folder>
        <folder>views</folder>
        <filename plugin="osmylicensesmanager">osmylicensesmanager.php</filename>
        <filename>include.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="license-keys"
                    type="text"
                    label="PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_LICENSE_KEYS_LABEL"
                    description="PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_LICENSE_KEYS_DESC"
                    />

                <field
                    name="release-channel"
                    type="list"
                    default="stable"
                    label="PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_RELEASE_CHANNEL_LABEL"
                    description="PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_RELEASE_CHANNEL_DESC">
                    <option value="stable">PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_RELEASE_CHANNEL_STABLE</option>
                    <option value="dev">PLG_SYSTEM_OSMYLICENSESMANAGER_FIELD_RELEASE_CHANNEL_DEV</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSMyLicensesManager"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_system_osmylicensesmanager]]></server>
    </updateservers>
</extension>
